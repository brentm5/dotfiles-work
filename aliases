# General
alias md="marked"
alias l='ls'
alias c="cd ~/code"

# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias dotfiles="cd ~/.dotfiles"
alias killit="echo "ðŸ”¥" && kill -s KILL"
alias ls="lsd"

# Shitty fixes
alias fix_dock="killall -Kill Dock"
alias fix-completions="rm ~/.zcompdump && exec zsh"

# git
alias gs="git status --short --branch"
alias gg="git log --graph"
alias gcm="git commit -m"

# Github

alias ghpr="gh pr create --web"
alias gho="gh repo view --web"
alias ghr="gh repo view --web"

# Bundler
alias b="bundle"
alias be="bundle exec"

# PNPM
alias pnpall="pnpm recursive run --if-present"

# Rspec
alias s="rspec"

# Gatling
alias gatling="~/gatling/bin/gatling.sh"

# Chef
alias k="kitchen"
alias kc="kitchen converge"
alias kv="kitchen verify"
alias ce="chef exec"

# Rakefile overrides
alias crake="rake -f ~/.rake-files/chef"

# Spotify
alias song="tmux-spotify-info"

# Blink1
alias blink-error="blink1-tool --red --glimmer=5 > /dev/null"
alias blink-success="blink1-tool --green --glimmer=5 > /dev/null"
alias blink-off="blink1-tool --off > /dev/null"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
