#!/bin/bash

# Credential helper for Github CLI
# Also need to setup the following in ~/.docker/config.json
# {
#   "credHelpers": {
#     "ghcr.io": "gh"
#   }
# }

username="${GITHUB_USERNAME}"

creds="$(jq -c -n \
       --arg username "$username" \
       --arg secret "$(gh auth token --user $username)" \
       '{"Username": $username, "Secret": $secret}')"

       echo "$creds"
